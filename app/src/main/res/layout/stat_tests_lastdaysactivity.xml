<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/stat_tests_lastDaysActivity_content"
        android:layout_alignTop="@+id/stat_tests_lastDaysActivity_content"
        android:layout_alignEnd="@id/stat_tests_lastDaysActivity_content"
        android:layout_alignBottom="@id/stat_tests_lastDaysActivity_content"
        android:background="@drawable/stat_tests_last_days_activity_background"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/stat_tests_lastDaysActivity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/oswald"
                android:text="@string/passed_tests"
                android:textColor="@color/black"
                android:textSize="@dimen/stat_cardName_textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardName"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/neuton"
                android:text="@string/in_recent_days" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/stat_marginVertical"
            android:layout_marginHorizontal="@dimen/stat_marginHorizontal"
            app:cardBackgroundColor="@color/stat_cardBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/stat_marginHorizontal"
                android:layout_marginTop="@dimen/stat_marginVertical"
                android:minHeight="@dimen/stat_minChartHeight" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>