<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTappingTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Дата [массив нажатий]" />

    <Button
        android:id="@+id/add_entry_about_tapping_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить запись про таппинг тест" />

    <EditText
        android:id="@+id/editTextTextReactionTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Дата Результат" />

    <Button
        android:id="@+id/add_entry_about_reaction_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить запись про реакционный тест" />

</LinearLayout>